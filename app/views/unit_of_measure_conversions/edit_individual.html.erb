<h1>Editing Unit Of Measure Conversions</h1>

  <%= form_tag update_individual_unit_of_measure_conversions_path, :method => :put do %>

<table>
 
    <% @unit_of_measure_conversions.each do |uomc| %>

      <%= fields_for "uom_convs[]", uomc do |f| %>

  <tr>
    <th>Conversion Factor</th>
    <th>Primary Uom</th>
    <th>Secondary Uom</th>
  </tr>

     <tr>
    <td><%= f.text_field :conversion_factor, :size => 10 %></td>

    <td><%= f.collection_select :primary_uom_id, UnitOfMeasure.all(:order => "uom_desc"), :id, :uom_desc %></td>
  
    <td><%= f.collection_select :secondary_uom_id, UnitOfMeasure.all(:order => "uom_desc"), :id, :uom_desc %></td>
    
    </tr>

    <tr>
    <th>Item No.</th>
    <th>From Effective Date</th>
    <th>To Effective Date</th>
  </tr>


    <tr>

    <td><%= f.text_field :item_no, :size => 25 %></td>

    <td><%= f.date_select :from_effective_date %></td>

    <td><%= f.date_select :to_effective_date %></td>

    </tr>

  <tr>
    <th>Comments</th>
  </tr>

    <tr>

    <td><%= f.text_area :comments, :rows => 5, :cols => 25 %><td>

    </tr>

   </tr> 

      <% end %>
  
    <% end %>  



</table>

  <p> <%= submit_tag "Submit" %></p>

  <% end %>

<%= link_to 'Back', unit_of_measure_conversions_path %>
