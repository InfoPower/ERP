<ul>
  <% apages = Page.where(:parent_id => nil) %>
  <% apages.each do |apage| %>
    <% url = root_path + "welcome/index" %>
    <% idname = "Parent" + apage.id.to_s %>
    <li id=<%= idname %> class="h" href=<%= url %>><a href=<%= url %> ><%= apage.name %></a>
      <ul>
        <% @parent = apage.id %>
        <%= render :partial => "pages/subpage", :object => @parent %> 
      </ul>
    </li>
  <% end %>
</ul>
          